# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Movies-iOS' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Movies-iOS
  pod 'AlamofireImage'
  pod 'SwiftyJSON', :git => 'https://github.com/SwiftyJSON/SwiftyJSON.git'
  pod 'Alamofire', '~> 4.0'

  target 'Movies-iOSTests' do
    inherit! :search_paths
    use_frameworks!

    # Pods for testing
    pod 'AlamofireImage'
    pod 'SwiftyJSON', :git => 'https://github.com/SwiftyJSON/SwiftyJSON.git'
    pod 'Alamofire', '~> 4.0'
  end

  target 'Movies-iOSUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end

target 'Movies-tvOS' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Movies-tvOS
  pod 'AlamofireImage'
  pod 'SwiftyJSON', :git => 'https://github.com/SwiftyJSON/SwiftyJSON.git'
  pod 'Alamofire', '~> 4.0'

  target 'Movies-tvOSTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'Movies-tvOSUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
